<Window x:Class="LibBusiness.Presentation.Resources.CustomControls.HistoricoModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibBusiness.Presentation.Resources.CustomControls"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Title="HistoricoModal" Height="450" Width="600" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Border Style="{StaticResource borderPage}" CornerRadius="10 10 10 10" Grid.RowSpan="3" BorderThickness="2" BorderBrush="#3f3f3f"/>
        <StackPanel>
            <DataGrid x:Name="dtgHistoricoEmprestimos" Margin="40" Height="250" IsReadOnly="True"/>
            <Button x:Name="btnSair" Style="{StaticResource mainBtn}" Content="Sair" Click="btnSair_Click"/>
        </StackPanel>
    </Grid>
</Window>
